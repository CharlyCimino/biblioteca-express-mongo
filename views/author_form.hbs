{{> header}}

{{> sidebar}}

<h1>{{title}}</h1>

<form action="" method="post">
	{{log author }}
	<div class="form-group">
		<label for="first_name">First Name:</label>
		<input type="text" id="first_name" name="first_name" class="form-control" placeholder="First name"
			required='true' value={{#if author}} {{author.first_name}} {{else}} '' {{/if}}>
		<label for="family_name">Family Name:</label>
		<input type="text" id="family_name" name="family_name" class="form-control" placeholder="Family name"
			required='true' value={{#if author}} {{author.family_name}} {{else}} '' {{/if}}>
	</div>
	<div class="form-group">
		<label for="date_of_birth">Date of birth:</label>
		<input type="date" id="date_of_birth" name="date_of_birth" class="form-control" placeholder='dd/mm/yyyy'
			value={{#if author}} {{dateFormattedFromForm author.date_of_birth}} {{else}} '' {{/if}}>
	</div>
	<div class="form-group">
		<label for="date_of_death">Date of death:</label>
		<input type="date" id="date_of_death" name="date_of_death" class="form-control" placeholder='dd/mm/yyyy'
			value={{#if author}} {{dateFormattedFromForm author.date_of_death}} {{else}} '' {{/if}}>
	</div>
	<button class="btn btn-primary" type="submit">Submit</button>
</form>

{{#if errors}}
<ul>
	{{#each errors}}
	<li>{{this.msg}}</li>
	{{/each}}
</ul>
{{/if}}

{{> footer}}