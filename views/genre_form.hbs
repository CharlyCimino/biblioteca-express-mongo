{{> header}}

{{> sidebar}}

<h1>{{title}}</h1>

<form action="" method="post">
	<div class="form-group">
		<label for="name">Genre:</label>
		<input type="text" id="name" name="name" class="form-control" placeholder="Fantasy, Poetry, etc...">
	</div>
	<button class="btn btn-primary" type="submit">Submit</button>
</form>

{{#if errors}}
<ul>
	{{#each errors}}
	<li>{{this.msg}}</li>
	{{/each}}
</ul>
{{/if}}

{{> footer}}